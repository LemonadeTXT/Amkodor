<Window x:Class="Amkodor.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amkodor.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Title="AuthWindow" Height="400" Width="350">
    <Grid>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="75,122,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textboxLogin" HorizontalAlignment="Left" Margin="175,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="75,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="textboxPassword" HorizontalAlignment="Left" Margin="175,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,274,0,0" VerticalAlignment="Top" Click="Button_Enter"/>

    </Grid>
</Window>
